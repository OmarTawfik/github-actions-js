{
  "compilerOptions": {
    // Compilation options
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "typeRoots": ["./typings/"],
    "types": ["jest"],
    "lib": [],

    // Features
    "downlevelIteration": true,

    // Output files
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,

    // Diagnostics
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": ["./out/"]
}
