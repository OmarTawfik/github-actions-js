{
  "compilerOptions": {
    // Compilation options
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "typeRoots": ["./typings/"],
    "types": ["jest"],

    // Output files
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,

    // Diagnostics
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": ["./out/"]
}
